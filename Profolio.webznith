/* font link */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

/* root color */
:root{
      --primary-color:#E744F2;    
      --primary-color-dark:#E011EE;
      --secondary-color:#EEC211;
      --text-dark:#1E2029;
      --text-light:#BCBFCD;
      --extra-light:#F0F1F5;
      --max-width:1200px;    
}
*{
      padding: 0%;
      margin: 0%;
      box-sizing: border-box; 
               
}

a{
   text-decoration: none;
}

    /* body */

body{
       font-family:'poppins',sans-serif; 
      
       
}
      /* nav bar */
nav{
     width: 100%;
     position: fixed;
     top: 0%;
     left: 0%; 
     background-color: #ffffff;  
     z-index: 99;   
}

            /* social media */
.social_media img{
  
  position: relative;
  top: 47vh;
  width: 35px;
  height: 35px;
  display:block;
  margin-left: 15px;

}

                       


.social_media img {
  width: 30px;
  height: 30px;
  /* background: rgb(249, 193, 250); */
  transition: transform 0.5s ease;  /* smooth zoom */
  
}

.social_media img:hover {
  transform: scale(1.75); /* zoom in to 120% */
  background-color: #fcd4ff;
  border: 2px solid var(--primary-color);
   border-radius: 50%;
}



/* Desktop navbar (full screen) */
.nav_content {
  max-width: var(--max-width);  
  margin: auto;
  padding: 1.5rem 1rem;
  display: flex;
  align-items: center;
  justify-content: space-between; 
}

/* Push menu to the right */
nav ul {
  margin-left: auto;   /* ✅ moves ul fully to the right */
}

           /* nav logo */

nav.logo {
         font-size: 1.5rem;
         font-weight: 600;
         color: var(--primary-color); 
         transition: 3s;    
}
nav.logo a:hover{
        color: var(--primary-color-dark);
}
.logo a{
       color: var(--primary-color-dark);
       font-weight: 600;
       font-size: 3vh;
}

nav.checkbox{
      display: none;
}

nav input{
        display: none;      
}
nav.checkbox i{
        font-size: 2rem;
        color: var(--primary-color); 
        cursor: pointer; 
          
}
.checkbox{
        position: relative;
        left: 0px;      
}

ul{
      display: flex;
      align-items: center;
      gap: 1rem;
      list-style: none;
      transition: left 0.3s;        
}

.bar li a{
       padding: .5rem 1rem;  
       border: 2px solid transparent;
       text-decoration: none;
       font-weight: 600;
       color: var(--text-dark);   
       transition: 0.3s;  
}



ul li a:hover{
        border-top-color:var(--secondary-color) ; 
        border-bottom-color:var(--secondary-color) ;   
        color:var(--secondary-color)  
}
.section{
         background-color: var(--extra-light); 
         height: 100vh;
             
}

             /* section content */
.section_container{
          min-height: 100vh;
          max-width: var(--max-width);
          margin: auto;
          padding: 1rem;
          display: grid;
          grid-template-columns: repeat(2,1fr);
          gap: 4rem; 
         
}

.content{
       display:flex ;
       flex-direction: column;
       justify-content: center;
}

.subtitle{
          letter-spacing: 2px; 
          color: var(--text-light);
          font-weight: 600;
          margin-bottom: .5rem;
          

}

.subtitle{
              position: relative;
        top: 20vh; 
        
}





.title{
        font-size: 2.5rem;
        font-weight: 400;
        line-height: 3rem;
        color: var(--text-dark);
        margin-bottom: 1rem; 
        position: relative;
        top: 20vh;
             
}

.title span{
         font-weight: 600;     
}

.description{
        line-height:1,5rem ;
        color: var(--text-light);
        margin-bottom: 2rem;
         position: relative;
        top: 20vh;
}

         /* buttton */
.action_btn{
          display: flex;
          gap: 1rem;    
}

.action_btn button{
        font-size: 1rem;
        font-weight: 600;
        letter-spacing: 2px;
        padding: 1rem 2rem;
        outline: none;
        border: 2px solid var(--primary-color);
        border-radius: 15px;
        transition: 0.3s;
        cursor: pointer;
        position: relative;
        top: 20vh;
}

.hire_me{
        background-color: var(--primary-color);  
        color: #ffffff;    
}
.hire_me:hover{
         background-color: var(--primary-color-dark);     
}
.download_cv{
         color: var(--primary-color);     
}
.download_cv:hover{
         background-color: var(--primary-color-dark);
         color: #ffffff;
}
       /* image  */

.images{
         display: grid;
         place-items: center;     
}

.images img{
          width: min(25rem,90%);
          border-radius: 100%;
          height: 50%; 
         position: relative;
         left: 95vh;
         bottom: 55vh;
          
}



