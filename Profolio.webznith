            /* media query */
/* ---------- MEDIA QUERY FOR SMALL DEVICES ---------- */
@media (max-width: 750px) {
  /* Navbar toggle visible */
  nav .checkbox {
    display: block;
  }

  /* Mobile menu */
  ul {
    position: absolute;
    top: 100%;
    left: 100%;
    width: 100%;
    height: 100vh;
    background-color: var(--primary-color);
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    transition: 0.3s ease-in-out;
  }

  nav #check:checked ~ ul {
    left: 0;
  }

  ul li a {
    font-size: 1.2rem;
    color: #fff;
  }

  /* Hero section stacked */
  .section_container {
    grid-template-columns: 1fr;
    text-align: center;
    padding: 8rem 1rem 2rem 1rem;
    display: flex;          
    flex-direction: column; 
    align-items: center;
    position: absolute;
    bottom: 10px;
  }

  /* Image on top */
  .images {
    order: -1; 
    display: flex;
    justify-content: center;
  }

  .images img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    position: static; 
    margin-bottom: 3px; /* ✅ only 10px gap below image */
  }

  /* Buttons centered */
  .action_btn {
    justify-content: center;
    flex-wrap: wrap;
  }

  .action_btn button {
    padding: 0.8rem 1.5rem;
  }

  /* Adjust text */
  .title {
    font-size: 2rem;
    line-height: 2.5rem;
  }

  .description {
    font-size: 0.95rem;
    line-height: 1.4rem;
    margin: 0.5rem 0 1rem 0;
  }
}






